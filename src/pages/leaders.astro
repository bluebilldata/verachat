<section class="bg-gray-50 py-20">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-extrabold text-gray-900 mb-12">Pricing</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <PriceCard
        title="Medium Box"
        description="For growing teams that need more power and flexibility."
        price="$4999"
        features={[
          "Unlimited projects",
          "Advanced analytics",
          "Priority support"
        ]}
        highlight={true}
      />

      <PriceCard
        title="Large Box"
        description="For enterprises needing scalability and dedicated support."
        price="$6999"
        features={[
          "Custom integrations",
          "Dedicated success manager",
          "Premium support"
        ]}
      />
    </div>
  </div>
</section>

<section id="waitlist" class="bg-white-50 py-20">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-4xl font-extrabold text-gray-900 text-center mb-12">
      Join The Waitlist!
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
      <!-- Left cell -->
      <div class="pt-20 pl-10 pr-6 pb-8">
        <h2 class="text-6xl font-bold text-gray-800">
          Skip the line.
        </h2>
        <p class="mt-4 text-gray-600">
          If you want to skip to the front, we'd love to talk.  Please use the calendar below to set an appointment.
        </p>
        <h2 class="text-8xl font-bold text-gray-800">
          ↓
        </h2>
      </div>

      <!-- Right cell -->
      <div>
        <script
          type="text/javascript"
          class="encharge-form-embed-script"
          src="https://resources-app.encharge.io/embed-production.min.js"
        ></script>
        <div
          class="encharge-form-embed"
          data-encharge-form-id="15de90f5-0492-4334-a4b2-40ab5536a3c8"
        ></div>
      </div>
    </div>

<!-- Calendly inline widget begin -->
<div class="calendly-inline-widget" data-url="https://calendly.com/sarah-veratree/30min" style="min-width:320px;height:700px;"></div>
<script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
<!-- Calendly inline widget end -->

  </div>
</section>

</Layout>
