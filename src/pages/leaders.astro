<section class="bg-gray-50 py-20">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-extrabold text-gray-900 mb-12">Pricing</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <PriceCard
        title="Medium Box"
        description="For growing teams that need more power and flexibility."
        price="$9999"
        features={[
          "Unlimited projects",
          "Advanced analytics",
          "Priority support"
        ]}
        highlight={true}
      />

      <PriceCard
        title="Large Box"
        description="For enterprises needing scalability and dedicated support."
        price="$9999"
        features={[
          "Custom integrations",
          "Dedicated success manager",
          "Premium support"
        ]}
      />
    </div>
  </div>
</section>


<section class="bg-white-50 py-20">
  <div class="max-w-6xl mx-auto px-6 text-center">

  </div>
</section>


</Layout>
