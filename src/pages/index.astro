---
import Layout from '../layouts/Layout.astro';
import Product from '../components/Product.astro';
import Vera from "../components/Vera.astro";
import VeraTree from "../components/VeraTree.astro";
---

<Layout>

  <!-- Hero -->
  <section class="bg-gray-50 py-24 text-center">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="font-['Raleway'] text-6xl sm:text-5xl md:text-7xl lg:text-8xl text-gray-900 font-bold mb-4">
        The Power of Big Data...
      </h1>
      <br><br>
      <h2 class="text-5xl sm:text-3xl md:text-4xl text-center text-gray-500 mb-8">Now available in all sizes!</h2>
      <br>
      <div class="flex justify-center gap-4">
        <a href="#teams" class="px-6 py-2 bg-gray-200 text-gray-800 text-lg rounded-lg hover:bg-gray-300 transition">Teams</a>
        <a href="#individuals" class="px-6 py-2 bg-gray-200 text-gray-800 text-lg rounded-lg hover:bg-gray-300 transition">Individuals</a>
        <!--<a href="leaders" class="px-6 py-2 bg-gray-200 text-gray-800 text-lg rounded-lg hover:bg-gray-300 transition">Marketers</a>-->
      </div>
    </div>
  </section>

<section class="bg-white-50 py-10">
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="p-2 order-1 md:order-1">
        <p class="text-4xl text-gray-900 text-center mb-8">
          Phenomenal processing power— itty-bitty living space.
        </p>
        <p class="text-2xl text-gray-600 text-center mb-8">
          <VeraTree /> brings the power of Big Data into a local, ultra-private environment where you're free to chat, explore, create and collaborate without fear or looking over your shoulder.
          <br><br>
          Designed for Teams who need data security and Individuals who want privacy.
        </p>
      </div>

      <!-- Right cell (shows second on mobile, second on desktop) -->
      <div class="p-2 order-2 md:order-2">
        <img 
          src="/images/veratree_realistic.png" 
          alt="VeraTree" 
          class="object-contain" 
          style="height:100%; width:auto; max-height:500px;" 
        />
      </div>
    </div>
  </div>
</section>

<!-- Features -->
<section id="features" class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-0">

      <!-- Teams -->
      <div class="md:pr-8">
        <h2 id="teams" class="text-4xl text-gray-900 mb-10 tracking-tight">Teams</h2>

        <div class="space-y-8">
          <Product
            product_name="AlignmentOps"
            product_link="/alignmentops"
            product_bullets={[
              "Align your team around shared goals.",
              "Spot friction early and keep projects on track.",
              "Track alignment trends to boost performance.",
              "Strengthen resilience through continuous feedback."
            ]}
          />

          <Product
            product_name="Lakehouse"
            product_link="/lakehouse"
            product_bullets={[
              "An Enterprise-grade Data Stack",
              "500+ data connectors",
              "Open-source first approach",
              "Flat-rate billing",
            ]}
            coming_soon=True
          />
        </div>
      </div>

      <!-- Individuals -->
      <div class="md:pl-8">
        <h2 id="individuals" class="text-4xl text-gray-900 mb-10 tracking-tight mt-12 md:mt-0">Individuals</h2>

        <div class="space-y-8">

          <Product
            product_name="Private LLM"
            product_link="/private_llm"
            product_bullets={[
              "Fully Private LLM Chat Experience",
              "Use our LLM or connect your own — it’s completely yours.",
              "Create and manage private projects in your own workspace."
            ]}
          />

          <Product
            product_name="Integration"
            product_link="/integration"
            product_bullets={[
              "A guided Jungian system for self-integration",
              "Explore your patterns, symbols, and shadow",
              "Track inner dialogue and recurring archetypes",
              "Bridge unconscious insights with conscious goals"
            ]}
            coming_soon=True
          />

        </div>
      </div>

    </div>
  </div>
</section>


</Layout>
