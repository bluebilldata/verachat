---
import Layout from '../layouts/Layout.astro';
import Vera from "../components/Vera.astro";
import VeraTree from "../components/VeraTree.astro";
import FeatureCard from "../components/FeatureCard.astro";
import PriceCard from "../components/PriceCard.astro";
import QuoteCard from "../components/QuoteCard.astro";

---

<style>
  /* Hide the default marker */
  details summary::-webkit-details-marker {
    display: none;
  }
  details summary::marker {
    display: none;
  }
</style>

<Layout>
  <section class="py-10 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6 text-left">
        <!-- Section label -->
        <p class="text-xs font-semibold text-gray-500 tracking-wider uppercase mb-2">
        Product
        </p>
        <h1 class="text-3xl font-extrabold text-gray-900 mb-2">For Teams</h1>
        <!-- <p class="text-md text-gray-600 leading-relaxed mb-10 max-w-6xl">
        a little intro
        </p>-->
    </div>
  </section>

<!-- Hero -->
<section class="bg-white-50 py-14">
  <div class="max-w-6xl pl-9 mx-auto px-4 text-left">
    <div class="flex flex-col md:flex-row md:items-stretch md:justify-between gap-6 pb-10">
      
      <!-- Left: h1 + h2 stacked -->
      <div class="flex-1 flex flex-col justify-left">
        <!-- <h2 class="text-2xl font-serif text-gray-900">[ə-ˈlīn-mənt ˌäps] noun</h2>  -->
        <h1 class="font-['Raleway'] text-6xl sm:text-5xl md:text-7xl lg:text-8xl text-gray-900 font-bold mb-4">
          AlignmentOps
        </h1>
        <h2 class="text-4xl font-serif text-gray-900">
          A toolkit that builds alignment across ideas, people, processes and teams.
        </h2>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-18">
      <QuoteCard
        template="2"
        quote="Not finance. Not strategy. Not technology. It is teamwork that remains the ultimate competitive advantage."
        author="Patrick Lencioni"
        role="Author, The Five Dysfunctions of a Team"
        image="/images/lencioni.png"
      />
      <QuoteCard
        template="2"
        quote="Organizations learn only through individuals who learn. But individual learning does not guarantee organizational learning. Without integration, it is only potential."
        author="Peter Senge"
        role="Author, The Fifth Discipline"
        image="/images/senge.png"
      />
    </div>
  </div>
</section>

<section class="bg-gray-50 py-10">
  <div class="max-w-6xl mx-auto px-6 text-left relative px-10">
    <h2 class="text-4xl font-extrabold text-gray-900 mb-4">How it works?</h2>
    <div class="pl-4 pt-2">
      <p class="text-l text-gray-700 mb-4"><span class="font-bold">Data —</span> <VeraTree /> turns your team’s documentation, tickets, and other operational data into a clear snapshot of your project.</p>
      <p class="text-l text-gray-700 mb-4"><span class="font-bold">UI —</span> manage tasks, ask questions, and monitor KPIs in near real time. Explore alignment across time and at multiple resolutions: idea, project, team or org.</p>
      <p class="text-l text-gray-700 mb-4"><span class="font-bold">KPIs —</span> Watch projects move forward and let the data verify when milestones are truly reached.</p>
      <p class="text-l text-gray-700 mb-4"><span class="font-bold">Alerts —</span> get notified when thresholds are passed or progress is stalled.</p>
      <p class="text-l text-gray-700 mb-4"><span class="font-bold">Analytics —</span> Measure alignment trends over time, uncover bottlenecks, and identify the drivers of project success or failure.</p>
    </div>
  </div>
</section>


<section class="bg-white-50 py-12">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-extrabold text-gray-900 mb-6">Features</h2>
    <p class="text-xl text-gray-700 mb-6">AlignmentOps connects directly to your existing work tools—ticketing systems, documentation platforms, and more—so your data stays perfectly in sync. No manual updates. No busywork. Just alignment that runs itself.</p>
    <div class="grid grid-cols-1 gap-8">

      <FeatureCard
        title="Connect"
        section="Prepare"
        description="We'll connect your team’s tools and turn scattered data into alignment insights."
        image="connect.jpg"
        bullets={[
          "Integrate with your work ticket, chat, and documentation systems in minutes",
          "Pull internal data that verifies your team’s impact",
          "Watch your Knowledge Graph grow as connections form across people, projects, and ideas",
        ]}
      />

      <FeatureCard
        title="Discover"
        section="Prepare"
        description="Navigate your team's data via the knowledge graph or the Copilot."
        image="discover.jpg"
        bullets={[
          "See how knowledge connects beneath the surface",
          "Let the Copilot be your guide",
          "Find the gaps where context falls short"
        ]}
      />

      <FeatureCard
        title="Scope"
        section="Prepare"
        description="Set expectations, ownership, deadlines, and benchmarks."
        image="scope.jpg"
        bullets={[
          "Clarify project objectives and acceptance criteria",
          "Right-size tasks for fast delivery and clear ownership",
          "Anchor delivery dates to measurable milestones",
        ]}
      />

      <FeatureCard
        title="Lead"
        section="Deliver"
        description="Guide the team through execution and explore alignment in real time."
        image="lead.jpg"
        bullets={[
          "Track progress and bottlenecks",
          "Understand all the forces aligning team members—and pulling them away",
          "Spot emerging risks before they turn into blockers",
        ]}
      />

      <FeatureCard
        title="Unify"
        section="Deliver"
        description="Reduce friction and keep your team moving forward together."
        image="unify.jpg"
        bullets={[
          "Unblock team members",
          "Surface miscommunications before they escalate",
          "Turn friction points into training opportunities"
        ]}
      />

      <FeatureCard
        title="Analyze"
        section="Debrief"
        description="Measure outcomes and verify project success."
        image="analyze.jpg"
        bullets={[
          "View impact across key performance indictors",
          "Identify which decisions drove the strongest results",
          "Compare expected objectives against actual performance"
        ]}
      />

      <FeatureCard
        title="Reflect"
        section="Debrief"
        description="Understand impact across projects—and overtime"
        image="reflect.jpg"
        bullets={[
          "What projects delivered lasting value?",
          "Which projects fell short?",
          "Recognize the sum of your successes"
        ]}
      />

      <FeatureCard
        title="Optimize"
        section="Perfect"
        description="Explore ideas, people and processes across projects."
        image="optimize.jpg"
        bullets={[
          "Refine what works, remove what doesn’t",
          "Spot training gaps",
          "Identify conflicting ideas and sharpen team alignment",
        ]}
      />

      <FeatureCard
        title="Automate"
        section="Perfect"
        description="Use pre-built AI Agents to work on repetitive tasks"
        image="automate.jpg"
        bullets={[
          "Identify workflows that can run on autopilot",
          "Deploy AI Agents to execute routine updates and checks",
          "Free your team to focus on strategic work"
        ]}
      />

    </div>
  </div>
</section>

