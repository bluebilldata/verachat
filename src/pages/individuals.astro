---
import Layout from '../layouts/Layout.astro';
import Vera from "../components/Vera.astro";
import VeraTree from "../components/VeraTree.astro";
import FeatureCard from "../components/FeatureCard.astro";
import PriceCard from "../components/PriceCard.astro";
import QuoteCard from "../components/QuoteCard.astro";

---

<style>
  /* Hide the default marker */
  details summary::-webkit-details-marker {
    display: none;
  }
  details summary::marker {
    display: none;
  }
</style>

<Layout>
  <section class="py-10 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6 text-left">
        <!-- Section label -->
        <p class="text-xs font-semibold text-gray-500 tracking-wider uppercase mb-2">
        Product
        </p>
        <h1 class="text-3xl font-extrabold text-gray-900 mb-2">For Individuals</h1>
        <!-- <p class="text-md text-gray-600 leading-relaxed mb-10 max-w-6xl">
        a little intro
        </p>-->
    </div>
  </section>

<!-- Hero -->
<section class="bg-white-50 py-14">
  <div class="max-w-6xl pl-9 mx-auto px-4 text-left">
    <div class="flex flex-col md:flex-row md:items-stretch md:justify-between gap-6 pb-10">
      
      <!-- Left: h1 + h2 stacked -->
      <div class="flex-1 flex flex-col justify-left">
        <!-- <h2 class="text-2xl font-serif text-gray-900">[ə-ˈlīn-mənt ˌäps] noun</h2>  -->
        <h1 class="font-['Raleway'] text-9xl text-gray-900 font-bold mb-4">
          Personal Chatbot
        </h1>
        <h2 class="text-4xl font-serif text-gray-900">
          Your AI. Your rules.
        </h2>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-18">
      <QuoteCard
        template="2"
        quote="Wholeness is not achieved by cutting off a portion of one’s being, but by integration of the contraries."
        author="Carl Jung"
        role="Psychiatrist and Founder of Analytical Psychology"
        image="/images/jung.png"
      />
      <QuoteCard
        template="2"
        quote="Only by learning to live in harmony with your contradictions can you keep it all afloat."
        author="Audre Lorde"
        role="Poet, Essayist, and Civil Rights Activist"
        image="/images/lorde.png"
      />
    </div>
  </div>
</section>


<section class="bg-gray-50 py-10">
  <div class="max-w-6xl mx-auto px-6 text-left relative px-20">
    <h2 class="text-2xl font-extrabold text-gray-900 mb-4">How it works?</h2>
    <p class="text-l text-gray-700 mb-4">• Fully private – everything stays with you.</p>
    <p class="text-l text-gray-700 mb-4">• Truly yours – use our powerful LLM out of the box, or plug in your own models from any marketplace.</p>
    <p class="text-l text-gray-700 mb-4">• Personal workspace – create, save, and manage resources and projects only you can access.</p>
  </div>
</section>


<section class="bg-white-50 py-20">
  <div class="max-w-2xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-extrabold text-gray-900 mb-12">Pricing</h2>

    <div class="grid grid-cols-1 md:grid-cols-1 gap-8">
      <PriceCard
        title="Individual"
        description="For individuals"
        price="$99"
        features={[
          "Unlimited integrations",
        ]}
        highlight={true}
      />

    </div>
  </div>
</section>


<section id="waitlist" class="bg-gray-50 py-20">
  <div class="max-w-2xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-extrabold text-gray-900">Join The Waitlist!</h2>

    <script
    type="text/javascript"
    class="encharge-form-embed-script"
    src="https://resources-app.encharge.io/embed-production.min.js"
  ></script>
  <div 
    class="encharge-form-embed" 
    data-encharge-form-id="0bebeec6-92b5-4dee-a220-084ff3406643"
  ></div>

  </div>
</section>


</Layout>
