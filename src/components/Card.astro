---
export interface Props {
  href: string;
  icon: string;
  buttonLabel?: string;
  buttonColor?: string;
  buttonBorderColor?: string;
  imageSrc?: string;
}

const {
  href,
  icon,
  buttonLabel = "Learn more",
  buttonColor = "bg-[#efefef]",
  buttonBorderColor = "border-[#666666]",
  imageSrc
} = Astro.props;
---

<a
  href={href}
  class="block p-8 border rounded-lg shadow-sm hover:shadow-md transition hover:-translate-y-1 hover:bg-gray-50 min-h-[320px] flex flex-col justify-between"
>
  <!-- Top content -->
  <div>
    <div class="flex items-center gap-3 mb-4">
      <span class="text-2xl">{icon}</span>
      <h3 class="text-3xl font-bold">
        <slot name="title" />
      </h3>
    </div>

    <slot name="descriptionText" />

    <ul class="list-disc list-inside text-gray-600 space-y-2">
      <slot name="description" />
    </ul>
  </div>

  <!-- Bottom row -->
  <div class="flex items-center justify-between mt-6">
    {buttonLabel && (
      <span
        class={`inline-block px-4 py-2 text-sm font-semibold rounded-md border-2 ${buttonColor} ${buttonBorderColor}`}
      >
        {buttonLabel}
      </span>
    )}

    {imageSrc && (
      <img
        src={imageSrc}
        alt="Card image"
        class="w-24 h-24 object-contain"
      />
    )}
  </div>
</a>
