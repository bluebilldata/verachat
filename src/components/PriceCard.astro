---
const {
  title,
  description,
  price,
  period = "/mo",
  features = [],
  highlight = false,
} = Astro.props;
---

<div class={`p-10 rounded-xl shadow-md hover:shadow-lg transition flex flex-col ${
  highlight ? "bg-white-100 border-2 border-gray-400" : "bg-white"
}`}>
  <h3 class="text-2xl font-bold text-gray-900 mb-2">{title}</h3>
  <p class="text-gray-600 mb-6">{description}</p>

  <!-- Price with strikethrough -->
  <nobr><span class="text-4xl font-extrabold text-gray-400 mb-1 line-through">
    {price}</span><span class="text-lg font-medium text-gray-400"> {period}</span></nobr>
  <p class="text-sm text-gray-600 italic mb-6">Ask About Being a Beta</p>

  <ul class="text-gray-600 mb-6 space-y-2 flex-1">
    {features.map((f) => (
      <li>âœ” {f}</li>
    ))}
  </ul>

  <button id="waitlist" class="mt-auto px-6 py-3 bg-gray-900 text-white rounded-lg font-semibold hover:bg-gray-700 transition">
    Join the Waitlist
  </button>
</div>
